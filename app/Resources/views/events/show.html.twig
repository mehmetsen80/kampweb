{% block body %}
    <body class="blank-page sb-l-o sb-r-c onload-check" style="min-height: 686px;">
    <section id="content_wrapper">

        <header class="page-header">
            <div class="background-image-holder parallax-background">
                <img class="background-image" alt="Background Image" src="http://kampapp.com/parallax/img/kampappimage.png">
            </div>

            <div class="container">
                <div class="row">
                    <div class="col-sm-12 text-center">
                        {% if is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('edit-event', {'eventid': event.id}) }}" class="text-primary">Edit</a>
                        {% endif %}
                        <h1 class="text-white">{{ event.name }}</h1>
                        <a href="#" class="btn btn-primary btn-filled space-bottom-medium">Join Now</a>
                        <h3 class="text-white space-bottom-small">{{ event.startDate|date("m-d-Y")}} | {{ event.endDate|date("m-d-Y") }}</h3>
                        <p style="color: #fff;">{{ event.description }}</p>
                    </div>
                </div>
            </div>
        </header>
        {% if is_granted('ROLE_ADMIN') %}
            <section class="pure-text-centered">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-10 col-sm-offset-1 col-md-8 col-md-offset-2 text-center">
                            <span class="sub alt-font"><h3>Check In</h3></span>
                            <div class="panel-body p25">

                                {#<div class="col-md-8">#}
                                {#<input style=""  type="text" class="form-control typeahead" id="typeahead-field" placeholder="Search user">#}
                                {#</div>#}

                                <button type="button" class="btn btn-primary" data-toggle="modal" data-target=".bs-example-modal-lg">Start Checkin</button>

                                <div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-lg">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                                <h4 class="modal-title" id="myModalLabel">Check in Attendee</h4>
                                            </div>
                                            <div class="modal-body">
                                                <table class="table table-striped table-hover" id="datatable1" cellspacing="0" width="100%">
                                                    <thead>
                                                    <tr><th colspan="9"><h4></h4></th></tr>
                                                    <tr>
                                                        <th class="text-center">User</th>
                                                        <th class="text-center">Email</th>
                                                        <th class="text-center">Gender</th>
                                                        <th class="text-center"></th>
                                                    </tr>
                                                    </thead>
                                                    <tbody>
                                                    {%  for user in users %}
                                                        <tr>
                                                            <td> <a href="{{ path('showusers', {'userid': user.id}) }}" target="_blank">{{ user.fullname }}</a></td>
                                                            <td><a href="mailto:{{ user.username }}?Subject=Hello" target="_top">{{ user.username }}</a> </td>
                                                            <td>{{ user.gender }}</td>
                                                            <td class="text-right">
                                                                <div class="btn-group text-right">
                                                                    <button type="button" class="btn btn-danger btn-xs" data-toggle="dropdown" aria-expanded="false"> Check in
                                                                    </button>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    {% endfor %}
                                                    </tbody>
                                                </table>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                                <button type="button" class="btn btn-default">Save changes</button>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        {% endif %}
    </section>
    </body>
{% endblock %}
