{% block body %}

    <body class="blank-page sb-sl-o sb-r-c onload-check" style="min-height: 686px;">

        <!-- Start: Content-Wrapper -->
        <section id="content_wrapper">
            <!-- Start: TOPBAR -->
            <header id="topbar">

                <div class="topbar-left">
                    <ol class="breadcrumb">
                        <li class="crumb-active">
                            <a href="{{ path('dashboard') }}">Dashboard</a>
                        </li>

                        <li class="crumb-link">
                            <a href="{{ path('listevents') }}">Event List</a>
                        </li>

                        <li class="crumb-link">
                            <a href="#">Event</a>
                        </li>
                    </ol>
                </div>
            </header>
            <header class="page-header">
                <div class="background-image-holder parallax-background">
                    <img class="background-image" alt="Background Image" src="http://kampapp.com/parallax/img/kampappimage.png">
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col-sm-12 text-center">
                            <h1 class="text-white">{{ event.name }}</h1>
                            {#<a href="#" class="btn btn-primary btn-filled space-bottom-medium">Join Now</a>#}
                            <h3 class="text-white space-bottom-small">{{ event.startDate|date("m-d-Y") }}
                                | {{ event.endDate|date("m-d-Y") }}</h3>
                            <p style="color: #fff;">{{ event.description }}</p>
                            {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('edit-event', {'eventid': event.id}) }}" class="text-primary">Edit</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
                {% for flash_message in app.session.flashBag.get('dependentsuccess') %}
                    <div class="alert alert-success alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        <i class="fa fa-check pr10"></i>
                        {{ flash_message }}
                    </div>
                {% endfor %}
                {% for flash_message in app.session.flashBag.get('attendee_exists') %}
                    <div class="alert alert-warning alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                        <i class="fa fa-check pr10"></i>
                        {{ flash_message }}
                    </div>
                {% endfor %}
            </header>


            <!-- Begin: Content -->
            <section id="content" class="animated fadeIn">

                {% if is_granted('ROLE_ADMIN') %}
                    <span style="margin: 3%; " class="text-center sub alt-font"><h3>Search Users</h3></span>
                    <button style="margin-bottom: 20px;" type="button" class="center-block btn btn-primary" data-toggle="modal" data-target=".bs-example-modal-lg">Search</button>

                    <div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title" id="myModalLabel">Add an attendee</h4>
                                </div>
                                <table class="table table-striped table-hover" id="datatable1"
                                       cellspacing="0" width="100%">
                                    <thead>
                                    <tr>
                                        <th colspan="9"><h4></h4></th>
                                    </tr>
                                    <tr>
                                        <th class="text-center">User</th>
                                        <th class="text-center">Email</th>
                                        <th class="text-center">Gender</th>
                                        <th class="text-center"></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for user in users %}
                                        <tr>
                                            <td>
                                                <a href="{{ path('showusers', {'userid': user.id}) }}"
                                                   target="_blank">{{ user.fullname }}</a></td>
                                            <td><a href="mailto:{{ user.username }}?Subject=Hello"
                                                   target="_top">{{ user.username }}</a></td>
                                            <td>{{ user.gender }}</td>
                                            <td class="text-right">
                                                <div class="btn-group text-right">
                                                    <a href="{{ path('addattendees', {'eventid': event.id, 'userid': user.id}) }}">Select</a>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>

                {% endif %}
                {% for flash_message in app.session.flashBag.get('attendee_exists') %}
                    <div class="alert alert-warning alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×
                        </button>
                        <i class="fa fa-check pr10"></i>
                        {{ flash_message }}
                    </div>
                {% endfor %}

                <div class="col-md-12">
                    <div class="panel panel-visible" id="spy3">
                        <div class="panel-heading">
                            <div class="panel-title hidden-xs">
                                <span class="glyphicon glyphicon-tasks"></span>Attendees
                            </div>
                        </div>
                        <div class="panel-body pn">
                            <table class="table table-striped table-hover" id="datatable" cellspacing="0" width="100%">
                                <thead>
                                <tr>
                                    <th class="">User</th>
                                    <th class="">Dependents</th>
                                    <th class="">Check in Date</th>
                                    <th class="">Check out Date</th>
                                    <th class=""></th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for attendee in attendees %}
                                    <tr>
                                        <td>
                                            <a href="{{ path('showusers', {'userid': attendee.userid}) }}">{{ attendee.name }}</a>
                                        </td>
                                        <td>{{ attendee.dependents|length }}</td>
                                        <td>
                                            {% if attendee.checkin|length <= 0 %}
                                                <a href="{{ path('checkincheckout', {'attendeeId': attendee.id}) }}" data-toggle="modal" data-target="#myModal"><b>Check in</b></a>
                                                {% else %}
                                                    <a href="{{ path('checkincheckout', {'attendeeId': attendee.id}) }}" data-toggle="modal" data-target="#myModal"><b>{{ attendee.checkin }}</b></a>
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if attendee.checkout|length <= 0 %}
                                                <a href="{{ path('checkincheckout', {'attendeeId': attendee.id}) }}" data-toggle="modal" data-target="#myModal"><b>Check out</b></a>
                                            {% else %}
                                                <a href="{{ path('checkincheckout', {'attendeeId': attendee.id}) }}" data-toggle="modal" data-target="#myModal"><b>{{ attendee.checkout }}</b></a>
                                            {% endif %}
                                        </td>
                                        <td><a href="{{ path('deleteattendee', {'id': attendee.id}) }}"
                                               class="text-danger"
                                               onclick="return confirm('Are you sure that you want to remove this attendee?')">
                                                Remove
                                            </a>
                                        </td>
                                    </tr>


                                    <!-- Modal HTML -->
                                    <div class="modal fade " tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" id="myModal" class="modal fade">
                                        <div class="modal-dialog modal-lg">
                                            <div class="modal-content">
                                                <!-- Content will be loaded here from "remote.php" file -->
                                            </div>
                                        </div>
                                    </div>

                                    {#<div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">#}
                                        {#<div class="modal-dialog modal-lg">#}
                                            {#<div class="modal-content">#}
                                                {#<div class="modal-header">#}
                                                    {#<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>#}
                                                    {#<h4 class="modal-title" id="myModalLabel">Modal title</h4>#}
                                                {#</div>#}

                                                {#<div class="modal-body">#}
                                                    {#<iframe src="{{ path('checkincheckout', {'attendeeId': attendee.id}) }}" style="zoom:0.60" width="99.6%" height="920" frameborder="0"></iframe>#}
                                                {#</div>#}
                                                {#<div class="modal-footer">#}
                                                    {#<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>#}
                                                {#</div>#}
                                            {#</div>#}
                                        {#</div>#}
                                    {#</div>#}


                                {% endfor %}

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </section>
            <!-- End: Content -->


        </section>
    </body>
{% endblock %}
