{% extends '::default.html.twig' %}
{% block body %}
    <body class="ecommerce-page" xmlns="http://www.w3.org/1999/html">
    <!-- Start: Content-Wrapper -->
    <section id="content_wrapper">
        <!-- Start: Topbar -->
        <header id="topbar" class="ph10">
            <div class="topbar-left">
                <ul class="nav nav-list nav-list-topbar pull-left">
                    <li class="active">
                        <a href="{{ path('listevents') }}">Events</a>
                    </li>
                    <li>
                        <a href="#">Attendees</a>
                    </li>
                </ul>
            </div>
            <div class="topbar-right hidden-xs hidden-sm">
                <a href="ecommerce_orders.html" class="btn btn-default btn-sm light fw600 ml10">
                    <span class="fa fa-plus pr5"></span> New Event</a>
                <a href="ecommerce_customers.html" class="btn btn-default btn-sm light fw600 ml10">
                    <span class="fa fa-user pr5"></span> Add Attendee</a>
            </div>
        </header>
        <!-- End: Topbar -->

        <!-- Begin: Content -->
        <section id="content" class="table-layout animated fadeIn">

            <!-- begin: .tray-center -->
            <div class="tray tray-center">
                {% for flash_message in app.session.flashBag.get('eventsuccess') %}
                    <div class="alert alert-success alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                        <i class="fa fa-check pr10"></i>
                        {{ flash_message }}
                    </div>
                {% endfor %}
                <!-- create new order panel -->
                <div class="panel mb25 mt5">
                    <div class="panel-heading">
                        <span class="panel-title hidden-xs"> Add an Event</span>
                    </div>
                    <div class="panel-body p20 pb10">
                        <div class="tab-content pn br-n admin-form">
                            <div id="tab1_1" class="tab-pane active">

                                <div class="section row mbn">
                                    <div class="col-md-12 pl15">
                                        <div class="section row mb15">
                                            <div class="col-xs-12">
                                                <form method="post" action="{{ path('listevents') }}">
                                                <label for="name1" class="field prepend-icon">
                                                    {{ form_widget(eventform.name, {'id':'name1', 'attr': {'class': 'event-name gui-input br-light light', 'name':'name1', 'placeholder':"Event Name"}}) }}
                                                    <label for="name1" class="field-icon">
                                                        <i class="fa fa-user"></i>
                                                    </label>
                                                </label>
                                            </div>
                                        </div>
                                        <div class="section row mb15">
                                            <div class="col-xs-6">
                                                    <label for="datepicker1" class="field prepend-icon">
                                                        {{ form_widget(eventform.startDate, {'id':'datepicker1', 'attr': {'class': 'gui-input', 'name':'datepicker1', 'type':'text', 'placeholder':"Start Date"}}) }}
                                                        <label class="field-icon">
                                                            <i class="fa fa-calendar-o"></i>
                                                        </label>
                                                    </label>
                                            </div>
                                            <div class="col-xs-6">
                                                <label for="datepicker1" class="field prepend-icon">
                                                    {{ form_widget(eventform.endDate, {'id':'datepicker2', 'attr': {'class': 'gui-input', 'name':'datepicker2', 'type':'text', 'placeholder':"End Date"}}) }}
                                                    <label class="field-icon">
                                                        <i class="fa fa-calendar-o"></i>
                                                    </label>
                                                </label>
                                            </div>
                                        </div>
                                        <div class="section mb15">
                                            <label class="field prepend-icon">
                                                {{ form_widget(eventform.description, {'id':'comment', 'attr': {'class': 'gui-textarea', 'name':'comment', 'placeholder':"Description..."}}) }}

                                                <label for="comment" class="field-icon">
                                                    <i class="fa fa-comments"></i>
                                                </label>
                                                <span class="input-footer">
                                                    <strong>Hint:</strong>Don't be negative or off topic! just be awesome...
                                                </span>
                                            </label>
                                        </div>
                                        <button class="btn btn-primary" type="submit">Save Event</button>
                                    </div>
                                    {#<div class="col-md-3">#}
                                        {#<div class="fileupload fileupload-new admin-form" data-provides="fileupload">#}
                                            {#<div class="fileupload-preview thumbnail mb15">#}
                                                {#<img data-src="holder.js/100%x147" alt="holder">#}
                                            {#</div>#}
                                            {#<span class="button btn-system btn-file btn-block ph5">#}
                                                {#<span class="fileupload-new">Add</span>#}
                                                {#<span class="fileupload-exists">Change</span>#}
                                                {#<input type="file">#}
                                            {#</span>#}
                                        {#</div>#}
                                    {#</div>#}

                                </div>
                                <!-- end section row -->
                            </div>
                            {{ form_row(eventform._token) }}
                            </form>
                        </div>
                    </div>
                </div>

                <!-- recent events table -->
                <div class="panel">
                    <div class="panel-body pn">

                            <table class="table table-striped table-hover" id="datatable1" cellspacing="0" width="100%">
                                <thead>
                                <tr class="bg-light">
                                    <th class="">Operations</th>
                                    <th class="">Event Name</th>
                                    <th class="">Start Date</th>
                                    <th class="">End Date</th>
                                    <th class="text-center">Event Status</th>
                                </tr>
                                </thead>
                                <tbody>
                                    {%  for event in events %}
                                        <tr>
                                            <td class="">
                                                <label class="option block mn">
                                                    <a href="{{ path('edit-event', {'eventid': event.id}) }}">
                                                        <button type="button" class="btn btn-info br2 btn-xs fs12"> Edit
                                                        </button>
                                                    </a>
                                                    <a href="{{ path('deleteevent', {'id': event.id}) }}">
                                                        <button type="button" class="btn btn-danger br2 btn-xs fs12"> Delete
                                                        </button>
                                                    </a>
                                                </label>
                                            </td>
                                            <td class="">
                                                <a href="{{ path('showevents', {'eventid': event.id}) }}">
                                                    {{ event.name }}
                                                </a>
                                            </td>
                                            <td class="">
                                                {{ event.startDate|date('Y-m-d') }}
                                            </td>
                                            <td class="">
                                                {{ event.endDate|date('Y-m-d') }}
                                            </td>
                                            <td class="text-center">
                                                {% if 'now'|date('Y-m-d') < event.startDate|date('Y-m-d') %}
                                                <div class="btn-group text-center">
                                                    <button type="button" class="btn btn-info br2 btn-xs fs12"> Upcoming
                                                    </button>
                                                </div>

                                                {% elseif 'now'|date('Y-m-d') >= event.startDate|date('Y-m-d') and 'now'|date('Y-m-d') <= event.endDate|date('Y-m-d') %}
                                                    <div class="btn-group text-center">
                                                        <button type="button" class="btn btn-success br2 btn-xs fs12"> Active
                                                        </button>
                                                    </div>

                                                {% elseif 'now'|date('Y-m-d') > event.endDate|date('Y-m-d') %}
                                                    <div class="btn-group text-center">
                                                        <button type="button" class="btn btn-danger br2 btn-xs fs12"> Expired
                                                        </button>
                                                    </div>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                    </div>
                </div>

            </div>
            <!-- end: .tray-center -->

            <!-- begin: .tray-right -->
            <aside class="tray tray-right tray290">

                <!-- menu quick links -->
                <div class="admin-form">

                    <h4> Filter Events </h4>

                    <hr class="short">

                    <div class="section mb15">
                        <label for="order-id" class="field prepend-icon">
                            <input type="text" name="order-id" id="order-id" class="gui-input" placeholder="Event ID #">
                            <label for="order-id" class="field-icon">
                                <i class="fa fa-tag"></i>
                            </label>
                        </label>
                    </div>

                    <h5><small>Revenue Range($)</small></h5>
                    <div class="section row mb15">
                        <div class="col-md-6">
                            <label for="price1" class="field prepend-icon">
                                <input type="text" name="price1" id="price1" class="gui-input" placeholder="0">
                                <label for="price1" class="field-icon">
                                    <i class="fa fa-usd"></i>
                                </label>
                            </label>
                        </div>
                        <div class="col-md-6">
                            <label for="price2" class="field prepend-icon">
                                <input type="text" name="price2" id="price2" class="gui-input" placeholder="1000">
                                <label for="price2" class="field-icon">
                                    <i class="fa fa-usd"></i>
                                </label>
                            </label>
                        </div>
                    </div>

                    <h5><small>Start Date - End Date</small></h5>
                    <div class="section row">
                        <div class="col-md-6">
                            <label for="date1" class="field prepend-icon">
                                <input type="text" name="date1" id="date1" class="gui-input" placeholder="01/01/15">
                                <label for="date1" class="field-icon">
                                    <i class="fa fa-calendar"></i>
                                </label>
                            </label>
                        </div>
                        <div class="col-md-6">
                            <label for="date2" class="field prepend-icon">
                                <input type="text" name="date2" id="date2" class="gui-input" placeholder="01/31/15">
                                <label for="date2" class="field-icon">
                                    <i class="fa fa-calendar"></i>
                                </label>
                            </label>
                        </div>
                    </div>

                    <h5><small>Search Categories</small></h5>
                    <div class="section mb15">
                        <label class="field select">
                            <select id="filter-categories" name="filter-categories">
                                <option value="0" selected="selected">Filter by Categories</option>
                                <option value="1">Summer</option>
                                <option value="2">Winter</option>
                                <option value="2">Spring</option>
                                <option value="2">Fall</option>
                            </select>
                            <i class="arrow double"></i>
                        </label>
                    </div>

                    <h5><small>Search Attendee</small></h5>
                    <div class="section">
                        <label class="field select">
                            <select id="filter-customers" name="filter-customers">
                                    <option value="0" selected="selected">Filter by Attendee</option>
                                <option value="1">Michael</option>
                                <option value="2">David</option>
                                <option value="3">Sara</option>
                                <option value="4">Tasha</option>
                            </select>
                            <i class="arrow double"></i>
                        </label>
                    </div>

                    <hr class="short">

                    <div class="section">
                        <button class="btn btn-default btn-sm ph25" type="button">Search</button>
                        <label class="field option ml15">
                            <input type="checkbox" name="info">
                            <span class="checkbox"></span>
                            <span class="text-muted">Save Search</span>
                        </label>
                    </div>
                </div>
            </aside>
            <!-- end: .tray-right -->
        </section>
        <!-- End: Content -->
    </section>
